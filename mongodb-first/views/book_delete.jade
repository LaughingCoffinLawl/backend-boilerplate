extends layout

block content
    h1 #{title}: #{book.title}

    if book_instances.length
        p 
        strong Delete the following instances before attempting to delete this book.

        div(style='margin-left:20px;margin-top:20px')
            h4 Instances

            dl
                for instance in book_instances
                    dt
                        a(href=instance.url) #{instance.imprint}
    else 
        p Do you really want to delete this book?

        form(method='POST', action='')
            div.form-group
                input#author_id(type='hidden', name='book_id', required='true',  value=book._id)
            button.btn.btn-primary(type='submit') Delete