extends layout

block content

    h1 #{title}

    form(method="POST", action="")
        div.form-group
            label(for="name") Genre:
            input#name.form-control(type='text', placeholder='Fantasy, Poetry etc.', name='name', required='true', value=(typeof genre !== 'undefined' && genre !== null && genre.name) ? genre.name : '')
            button.btn.btn-primary(type='submit') Submit

    if typeof errors !== 'undefined' && errors
        ul
            for error in errors
                li!= error.msg
